<!DOCTYPE html>
<html lang="en">
<head>
    <%-include('./partials/header.ejs') %>
</head>
<body>
  <%- include('./partials/navbar.ejs') %>


  <div class="container mt-5">
    <h1>Welcome to Club House</h1>
    <div class="row">
      <% posts.forEach(post => { %>
        <div class="col-md-4">
          <div class="card mb-4">
            <div class="card-body">
              <h5 class="card-title"><%= post.title %></h5>
              <% if (user) { %>
                <p class="card-text">Click to view details.</p>
              <% } else { %>
                <p class="card-text">Login to view details.</p>
              <% } %>
              <a href="/post/<%= post._id %>" class="btn btn-primary">Read More</a>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
</body>
</html>
